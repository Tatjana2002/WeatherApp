
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Weather forecast", "Index", "Weather", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Cities", "Index", "Weather")</li>

                </ul>
                <form class="navbar-form navbar-right" action="@Url.Action("WeatherDetails", "Weather")" method="post" onsubmit=" return validateSearch()">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search.." name="cityName" list="cities-list" id="cityInput" autocomplete="off">
                        <datalist id="cities-list">
                            @foreach (var city in new List<string> { "Ankara", "Moscow", "London", "Berlin", "Madrid", "Kyiv", "Rome", "Paris", "Warsaw", "Barcelona", "Budapest", "Belgrade", "Prague", "Amsterdam", "Dublin", "Ljubljana", "Sarajevo", "Tirana", "Vienna", "Minsk", "Sofia", "Bern", "San Marino", "Oslo", "Brussels" })
                            {
                                <option value="@city"></option>
                            }
                        </datalist>
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="submit">
                                <i class="fa fa-search"></i>
                            </button>
                        </span>
                    </div>
                </form>

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Web App Forecast</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/Search")
    @RenderSection("scripts", required: false)


</body>
</html>
